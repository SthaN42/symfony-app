{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block content %}
    <h1 class="title">Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Videos</th>
                {% for video in videos %}
                    <td>{{ video.title }}</td>                    
                {% else %}
                    <td>No videos with this tag</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tag_index') }}">back to list</a>

    <a href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a>

    {{ include('tag/_delete_form.html.twig') }}
{% endblock %}
