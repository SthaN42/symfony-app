{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block content %}
    <h1 class="title">Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ video.url }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                {% for tag in tags %}
                <td>{{ tag.name }}</td>
                {% else %}
                <td>No tag</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('video_index') }}" class="btn clr-white">back to list</a>

    <a href="{{ path('video_edit', {'id': video.id}) }}">edit</a>

    {{ include('video/_delete_form.html.twig') }}
{% endblock %}
