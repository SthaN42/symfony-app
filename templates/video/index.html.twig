{% extends 'base.html.twig' %}

{% block title %}Video index{% endblock %}

{% block content %}
    <h1 class="title">Video index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Title</th>
                <th>Tags</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.url }}</td>
                <td>{{ video.title }}</td>
                <td>
                    {% for tag in video.tags %}
                    {{ tag.name }}
                    {% else %}
                    No Tags
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('video_show', {'id': video.id}) }}">show</a>
                    <a href="{{ path('video_edit', {'id': video.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('video_new') }}">Create new</a>
{% endblock %}
