{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block content %}
<h1 class="title">{{ news.title }}</h1>

<div id="yt-iframe-wrapper">
    <iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{ ytUrl }}" frameborder="0"></iframe>
</div>
<div class="actions">
    <a href="{{ path('news_index') }}" class="btn clr-white">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('news_edit', {'id': news.id}) }}" class="btn clr-white">edit</a>
        {{ include('news/_delete_form.html.twig') }}
    {% endif %}
</div>
{% endblock %}