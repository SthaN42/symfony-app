{% extends 'base.html.twig' %}

{% block title %}News index{% endblock %}

{% block content %}
    <h1 class="title">Lastest News</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Date</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.url }}</td>
                <td>{{ news.date ? news.date|date('Y-m-d') : '' }}</td>
                <td>{{ news.title }}</td>
                <td>
                    <a href="{{ path('news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('news_new') }}">Create new</a>
    {% endif %}
{% endblock %}
